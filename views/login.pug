extends layouts/login-layout.pug

block content
    .loginContainer 
        h1 Login 
        form(method="post") 
            p.errorMessage #{errorMessage}

            input(type="text" name="logUsername" placeholder="Enter your username or email" required="")
            input(type="password" name="logPassword" placeholder="Enter your password" required="")
            input(type="submit" value="Login")

        a(href="/requestReset") Forgot your password?
        br
        a(href="/register") Need an account? Register here!

